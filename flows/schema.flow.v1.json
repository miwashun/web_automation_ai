{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "site": { "type": "string" },
    "version": { "type": "string" },
    "name": { "type": "string" },
    "steps": {
      "type": "array",
      "items": {
        "oneOf": [
          { "type": "object", "additionalProperties": false,
            "properties": { "name": { "type": "string" }, "action": { "const": "open_url" }, "url": { "type": "string", "minLength": 1 } },
            "required": ["name", "action", "url"] },
          { "type": "object", "additionalProperties": false,
            "properties": { "name": { "type": "string" }, "action": { "const": "wait" }, "timeout": { "type": "integer", "minimum": 1 } },
            "required": ["name", "action", "timeout"] },
          { "type": "object", "additionalProperties": false,
            "properties": { "name": { "type": "string" }, "action": { "const": "click" }, "selector": { "type": "string", "minLength": 1 } },
            "required": ["name", "action", "selector"] },
          { "type": "object", "additionalProperties": false,
            "properties": { "name": { "type": "string" }, "action": { "const": "fill" }, "selector": { "type": "string", "minLength": 1 }, "value": { "type": "string" } },
            "required": ["name", "action", "selector", "value"] },
          { "type": "object", "additionalProperties": false,
            "properties": { "name": { "type": "string" }, "action": { "const": "log" }, "message": { "type": "string" }, "level": { "type": "string", "enum": ["info", "warn", "error"] } },
            "required": ["name", "action", "message"] },
          { "type": "object", "additionalProperties": false,
            "properties": { "name": { "type": "string" }, "action": { "const": "sleep_random" }, "min_ms": { "type": "integer", "minimum": 0 }, "max_ms": { "type": "integer", "minimum": 0 } },
            "required": ["name", "action", "min_ms", "max_ms"] },
          { "type": "object", "additionalProperties": false,
            "properties": { "name": { "type": "string" }, "action": { "const": "screenshot" }, "path": { "type": "string", "minLength": 1 }, "target": { "type": "string", "enum": ["viewport", "fullpage", "selector"] }, "selector": { "type": "string" } },
            "required": ["name", "action", "path"] }
        ]
      }
    }
  },
  "required": ["version", "steps"],
  "additionalProperties": false
}
